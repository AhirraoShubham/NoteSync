<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.shubham.notesync.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:id="@+id/container"
    android:background="@drawable/viewdfiles"
    android:clickable="true">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageViewSyncFiles"
        android:src="@drawable/notesync"
        android:layout_marginBottom="171dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:clickable="false" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageViewViewFiles"
        android:src="@drawable/view"
        android:layout_marginLeft="80dp"
        android:layout_alignTop="@+id/imageViewSyncFiles"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:clickable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NoteSync"
        android:id="@+id/textView6"
        android:fontFamily="cursive"
        android:textStyle="bold|italic"
        android:textSize="30dp"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignStart="@+id/imageViewSyncFiles"
        android:textColor="#e70af7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View "
        android:id="@+id/textView8"
        android:fontFamily="cursive"
        android:textStyle="bold|normal|italic"
        android:textSize="30dp"
        android:layout_below="@+id/imageViewViewFiles"
        android:layout_alignStart="@+id/imageViewViewFiles"
        android:textColor="#e70af7" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NoteSync"
        android:id="@+id/textView7"
        android:shadowColor="#060606"
        android:textAlignment="center"
        android:textColor="#f4ec42"
        android:textColorHighlight="#b3e3f030"
        android:textSize="80dp"
        android:textStyle="bold|italic"
        android:fontFamily="cursive"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_alignWithParentIfMissing="false" />

</RelativeLayout>